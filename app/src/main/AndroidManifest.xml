<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trevorwiebe.trackacow">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/track_a_cow_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/track_a_cow_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".CreateAccountActivity"
            android:label="Create Account"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".SignInActivity"
            android:label="Sign In"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditMedicatedCowActivity"
            android:parentActivityName=".MedicatedCowsActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageDrugsActivity"
            android:label="Manage Drugs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ManagePensActivity"
            android:label="Manage Pens"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MedicatedCowsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddNewDrugActivity"
            android:label="Add new drug"
            android:parentActivityName=".ManageDrugsActivity" />
        <activity
            android:name=".EditDrugActivity"
            android:label="Edit drug"
            android:parentActivityName=".ManageDrugsActivity" />
        <activity
            android:name=".MedicateACowActivity"
            android:label="Medicate a cow"
            android:parentActivityName=".MedicatedCowsActivity" />
        <activity
            android:name=".PenReportsActivity"
            android:label="Pen Reports"
            android:parentActivityName=".MedicatedCowsActivity" />
        <activity
            android:name=".MarkACowDeadActivity"
            android:label="Mark a cow dead"
            android:parentActivityName=".MedicatedCowsActivity" />
        <activity
            android:name=".EditPenActivity"
            android:label="Edit pen information"
            android:parentActivityName=".MedicatedCowsActivity" />
    </application>

</manifest>