<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trevorwiebe.trackacow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageDrugsActivity"
            android:label="Manage Drugs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ManagePensActivity"
            android:label="Manage Pens"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddNewCustomer"
            android:label="Add new customer"
            android:parentActivityName=".ManageCustomersActivity" />
        <activity
            android:name=".MedicatedCowsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddNewDrugActivity"
            android:label="Add new drug"
            android:parentActivityName=".ManageDrugsActivity" />
        <activity
            android:name=".EditDrugActivity"
            android:label="Edit drug"
            android:parentActivityName=".ManageDrugsActivity" />
        <activity android:name=".MedicateACowActivity"
            android:label="Medicate a cow"
            android:parentActivityName=".MedicatedCowsActivity"/>
    </application>

</manifest>