<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trevorwiebe.trackacow">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/track_a_cow_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/track_a_cow_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".AddDrugsGivenToSpecificCowActivity" />
        <activity android:name=".EditDrugsGivenToSpecificCowActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".EditDrugsGivenActivity"
            android:label="Edit drugs given" />
        <activity
            android:name=".CreateAccountActivity"
            android:label="Create Account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignInActivity"
            android:label="Sign In"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditMedicatedCowActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageDrugsActivity"
            android:label="Manage Drugs" />
        <activity
            android:name=".ManagePensActivity"
            android:label="Manage Pens" />
        <activity android:name=".MedicatedCowsActivity" />
        <activity
            android:name=".AddNewDrugActivity"
            android:label="Add new drug" />
        <activity
            android:name=".EditDrugActivity"
            android:label="Edit drug" />
        <activity
            android:name=".MedicateACowActivity"
            android:label="Medicate a cow" />
        <activity
            android:name=".PenReportsActivity"
            android:label="Pen Reports" />
        <activity
            android:name=".MarkACowDeadActivity"
            android:label="Mark a cow dead" />
        <activity
            android:name=".EditPenActivity"
            android:label="Edit pen information" />
    </application>

</manifest>