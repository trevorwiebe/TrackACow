<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trevorwiebe.trackacow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageDrugsActivity"
            android:label="Manage Drugs"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".ManageCustomersActivity"
            android:parentActivityName=".MainActivity"
            android:label="Manage Customers"/>

        <activity android:name=".ManagePensActivity"
            android:label="Manage Pens"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ReportsActivity"
            android:label="Reports"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>