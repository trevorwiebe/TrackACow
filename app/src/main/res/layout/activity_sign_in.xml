<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".SignInActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:gravity="center_horizontal">

        <TextView
            android:textColor="@android:color/white"
            android:text="Track-A-Cow"
            android:textSize="30sp"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Sign into your account"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            app:hintTextAppearance="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/sign_in_email"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_email_white_24dp"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                android:theme="@style/TextLabel"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            app:hintTextAppearance="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/white">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/sign_in_password"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_password_white_24dp"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:theme="@style/TextLabel"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/forgot_password"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textColor="@color/signInGray"
                android:text="Forgot your password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sign_in_btn"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Sign In"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/signing_in"
                android:translationZ="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <Button
            android:id="@+id/sign_in_with_google"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Sign In with Google"
            android:textColor="@android:color/white"
            android:background="@color/colorAccentDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/create_account"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Don't have an account?"
            style="?buttonBarButtonStyle"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/signInGray"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>