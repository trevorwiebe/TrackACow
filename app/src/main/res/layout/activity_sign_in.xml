<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.SignInActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:gravity="center_horizontal">

        <TextView
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:text="Email"
            android:textSize="16sp"
            android:labelFor="@id/sign_in_email"
            android:layout_marginTop="36dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:id="@+id/sign_in_email"
            android:inputType="textEmailAddress"
            android:theme="@style/TextLabel"
            android:textCursorDrawable="@null"
            android:backgroundTint="@android:color/white"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:text="Password"
            android:labelFor="@id/sign_in_password"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:id="@+id/sign_in_password"
            android:inputType="textPassword"
            android:theme="@style/TextLabel"
            android:textCursorDrawable="@null"
            android:backgroundTint="@android:color/white"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/forgot_password"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@android:color/white"
                android:text="Forgot your password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sign_in_btn"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Sign In"
                android:textColor="@color/colorAccent"
                android:background="@drawable/white_sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/signing_in"
                android:translationZ="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sign_in_with_google"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Sign In with Google"
                android:textColor="@android:color/white"
                android:background="@drawable/dark_accent_sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/signing_in_with_google"
                android:translationZ="10dp"
                android:visibility="invisible"
                android:indeterminateTint="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <Button
            android:id="@+id/create_account"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Create an account"
            android:textColor="@android:color/white"
            android:background="@drawable/accent_sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>