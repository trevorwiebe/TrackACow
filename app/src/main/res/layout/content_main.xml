<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ProgressBar
        android:id="@+id/loading_main"
        android:scaleY="2"
        android:indeterminateOnly="true"
        android:layout_marginTop="-5dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/no_pens_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:text="To begin add your cattle pens.  You can do so in the navigation drawer under Pens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/no_connection_and_signed_out_layout"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/no_connection_and_signed_out"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="36dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="You are signed out and not connected to the internet. A connection is required to sign in."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="signInButton"
            android:text="Try again"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:layout_margin="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>